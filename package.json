    "express": "~4.16.0",
    "faker": "^4.1.0",
    "faker-zh-cn": "^0.5.9",
    "hbs": "~4.0.1",
    "http-errors": "~1.6.2",
    "moment": "^2.24.0",
    "morgan": "~1.9.0",
    "node-polyglot": "^2.3.0",
    "node-sass-middleware": "0.11.0"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4",
