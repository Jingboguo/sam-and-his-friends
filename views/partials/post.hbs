<article class="post">
  <header>
    <div class="title">
      <h2>
        <a href="single.html">
          {{title}}
        </a>
      </h2>
      <p>
        {{subTitle}}
      </p>
    </div>
    <div class="meta">
      <time class="published" datetime={{dateFormatter date}}>
        {{dateFormatter date}}
      </time>
      <a href="#" class="author">
        <span class="name">
					{{fullName firstName lastName}}
        </span>
        <img src={{authorImageUrl}} alt="" />
      </a>
    </div>
  </header>
  <a href="single.html" class="image featured">
    <img src={{imageUrl}} alt="" />
  </a>
  <p>
    {{paragraphsPreview content}}
  </p>
  <footer>
    <ul class="actions">
      <li>
        <a href="single.html" class="button large">
          {{t "i18n-post-continue-reading"}}
        </a>
      </li>
    </ul>
    <ul class="stats">
      <li>
        <a href="#">
          {{category}}
        </a>
      </li>
      <li>
        <a href="#" class="icon fa-heart">
          {{numLikes}}
        </a>
      </li>
      <li>
        <a href="#" class="icon fa-comment">
          {{numComments}}
        </a>
      </li>
    </ul>
  </footer>
</article>
